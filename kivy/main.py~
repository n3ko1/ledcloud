import kivy
kivy.require('1.1.3')

from kivy.properties import NumericProperty
from kivy.app import App
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.floatlayout import FloatLayout
from kivy.uix.anchorlayout import AnchorLayout
from kivy.uix.button import Button
from kivy.uix.widget import Widget
from kivy.uix.scatter import Scatter
from kivy.uix.treeview import TreeView, TreeViewLabel
from kivy.uix.label import Label
from kivy.uix.textinput import TextInput
from kivy.uix.popup import Popup
from kivy.properties import StringProperty
from kivy.clock import Clock
import requests
import random
from weather import WeatherAPI

ip = '192.168.0.123'

class RemoteLayout(FloatLayout):
    def weather_forecast(self):
        stuttgart = WeatherAPI("stuttgart")
        print(stuttgart.getWeatherCode())
        print(stuttgart.getTemperature())
        r = requests.post(ip, params={'weatherCode':stuttgart.getWeatherCode()})

    def show_popup(self):
        btnclose = Button(text='Abort', size_hint_y=None, height='50sp')
        btngo = Button(text='Forecast', size_hint_y=None, height='50sp')
        content = BoxLayout(orientation='vertical')
        content.add_widget(Label(text='Enter a city'))
        content.add_widget(TextInput(
                text='',
                size_hint_y=None,
                height='30sp'))
        content.add_widget(btngo)
        content.add_widget(btnclose)
        popup = Popup(content=content, title='Modal popup example',
                      size_hint=(None, None), size=('300dp', '300dp'))
        btnclose.bind(on_release=popup.dismiss)
        btngo.bind(on_press=self.weather_forecast)
        popup.open()

class RemoteApp(App):

    def build(self):
        return RemoteLayout()

if __name__ == '__main__':
    RemoteApp().run()
